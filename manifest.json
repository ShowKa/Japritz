{
  "name": "速読Japritz",
  "version": "1.1",
  "manifest_version": 2,
  "description": "流れるような読書体験を",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": [
      "lib/element.js",
      "lib/queue.min.js",
      "lib/kuromoji.min.js",
      "japritz/tokenizer.js",
      "japritz/Chunk.js",
      "japritz/Chunks.js",
      "japritz/Clause.js",
      "japritz/Paragraphs.js",
      "japritz.js"
    ],
    "css": ["css/japritz.css"]
  }],
  "web_accessible_resources": [
    "lib/dict/*.dat.gz"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+J",
        "mac": "Alt+J",
        "chromeos": "Alt+J",
        "linux": "Alt+J"
      }
    }
  },
  "options_page": "options/options.html"
}